CREATE TABLE item(
  id INT NOT NULL AUTO_INCREMENT,
  name VARCHAR(255) NOT NULL,
  src VARCHAR(255) NOT NULL,
  level INT NOT NULL,
  cost INT NOT NULL,
  weight INT NOT NULL,
  stack TINYINT(1) NOT NULL DEFAULT 1,
  PRIMARY KEY(id)
)ENGINE=INNODB DEFAULT CHARSET=utf8;



CREATE TABLE location (
  id INT NOT NULL AUTO_INCREMENT,
  name VARCHAR(255) NOT NULL,
  type VARCHAR(255) NOT NULL,
  width INT NOT NULL,
  height INT NOT NULL,
  PRIMARY KEY(id)
) ENGINE=INNODB DEFAULT CHARSET=utf8;

CREATE TABLE location_open (
  locationid INT NOT NULL,
  src VARCHAR(255) NOT NULL,
  FOREIGN KEY (locationid) REFERENCES location (id) ON DELETE CASCADE
) ENGINE=INNODB DEFAULT CHARSET=utf8;

CREATE TABLE location_hab (
  locationid INT NOT NULL,
  area VARCHAR(255) NOT NULL,
  FOREIGN KEY (locationid) REFERENCES location (id) ON DELETE CASCADE
) ENGINE=INNODB DEFAULT CHARSET=utf8;

CREATE TABLE location_mine (
  locationid INT NOT NULL,
  class VARCHAR(255) NOT NULL,
  level INT NOT NULL,
  type VARCHAR(255) NOT NULL,
  FOREIGN KEY (locationid) REFERENCES location (id) ON DELETE CASCADE
) ENGINE=INNODB DEFAULT CHARSET=utf8;

CREATE TABLE location_shop (
    shopid INT NOT NULL AUTO_INCREMENT,
    locationid INT NOT NULL,
    PRIMARY KEY(shopid),
    FOREIGN KEY (locationid) REFERENCES location (id) ON DELETE CASCADE
) ENGINE=INNODB DEFAULT CHARSET=utf8;

CREATE TABLE warp (
  id INT NOT NULL AUTO_INCREMENT,
  name VARCHAR(255) NOT NULL,
  locId INT NOT NULL,
  x INT NOT NULL,
  y INT NOT NULL,
  outId INT NOT NULL,
  PRIMARY KEY(id),
  FOREIGN KEY (locId) REFERENCES location (id) ON DELETE CASCADE
) ENGINE=INNODB DEFAULT CHARSET=utf8;


CREATE TABLE resource (
    id INT NOT NULL AUTO_INCREMENT,
    itemid INT(255) NOT NULL,
    min INT(255) NOT NULL,
    max INT(255) NOT NULL,
    chance FLOAT NOT NULL,
    PRIMARY KEY(id),
    FOREIGN KEY (itemid) REFERENCES item (id) ON DELETE CASCADE
) ENGINE=INNODB DEFAULT CHARSET=utf8;

CREATE TABLE resource_location (
    locationid INT(255) NOT NULL,
    resourceid INT(255) NOT NULL,
    UNIQUE KEY resource_location(resourceid,locationid),
    FOREIGN KEY (resourceid) REFERENCES resource (id) ON DELETE CASCADE,
    FOREIGN KEY (locationid) REFERENCES location (id) ON DELETE CASCADE
) ENGINE=INNODB DEFAULT CHARSET=utf8;


CREATE TABLE shop_group (
    id INT NOT NULL AUTO_INCREMENT,
    shopid INT NOT NULL,
    name VARCHAR(255) NOT NULL,
    src VARCHAR(255) NOT NULL,
    PRIMARY KEY(id),
    FOREIGN KEY (shopid) REFERENCES location_shop (shopid) ON DELETE CASCADE
) ENGINE=INNODB DEFAULT CHARSET=utf8;

CREATE TABLE shop_type (
    id INT NOT NULL AUTO_INCREMENT,
    groupid INT NOT NULL,
    name VARCHAR(255) NOT NULL,
    src VARCHAR(255) NOT NULL,
    PRIMARY KEY(id),
    FOREIGN KEY (groupid) REFERENCES shop_group (id) ON DELETE CASCADE
) ENGINE=INNODB DEFAULT CHARSET=utf8;

CREATE TABLE shop_item (
    id INT NOT NULL AUTO_INCREMENT,
    typeid INT NOT NULL,
    itemid INT NOT NULL,
    amount INT NOT NULL,
    PRIMARY KEY(id),
    FOREIGN KEY (itemid) REFERENCES item (id) ON DELETE CASCADE,
    FOREIGN KEY (typeid) REFERENCES shop_type (id) ON DELETE CASCADE
) ENGINE=INNODB DEFAULT CHARSET=utf8;





